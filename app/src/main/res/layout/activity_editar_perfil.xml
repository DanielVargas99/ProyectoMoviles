<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editarPerfil"
    android:orientation="vertical">

    <TextView
        android:id="@+id/perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/principal"
        android:fontFamily="@font/dangrek_regular"
        android:padding="10dp"
        android:text="Perfil"
        android:textAlignment="gravity"
        android:textColor="@color/white"
        android:textSize="34sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/boton_navegacion"
        android:layout_below="@id/perfil">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagen"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/ic_account_circle"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:fontFamily="@font/secular_regular"
                android:paddingLeft="20dp"
                android:text="Nombre"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/campoNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:fontFamily="@font/secular_regular"
                android:paddingLeft="20dp"
                android:text="Edad"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/campoEdad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:fontFamily="@font/secular_regular"
                android:paddingLeft="20dp"
                android:text="Posicion"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/campoPosicion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:fontFamily="@font/secular_regular"
                android:paddingLeft="20dp"
                android:text="Ultimo equipo"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/campoEquipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:fontFamily="@font/secular_regular"
                android:paddingLeft="20dp"
                android:text="Telefono"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/campoTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/editar"
                android:layout_width="387dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:backgroundTint="@color/principal"
                android:fontFamily="@font/secular_regular"
                android:text="Editar perfil"
                android:textSize="16sp" />

            <Button
                android:id="@+id/cerrarSesion"
                android:layout_width="387dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/secular_regular"
                android:text="Cerrar Sesion"
                android:textColor="@color/principal"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/boton_navegacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/white"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navegar" />

</RelativeLayout>