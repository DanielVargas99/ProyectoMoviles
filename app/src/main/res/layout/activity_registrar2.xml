<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registrar4"
    android:orientation="vertical">

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/principal"
        android:fontFamily="@font/dangrek_regular"
        android:padding="10dp"
        android:text="Informacion de cuenta"
        android:textAlignment="gravity"
        android:textColor="@color/white"
        android:textSize="34sp"
        />

    <ImageView
        android:id="@+id/cargarFoto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_account_circle"
        android:layout_marginTop="60dp"/>

    <Button
        android:id="@+id/subirFoto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginLeft="30dp"
        android:paddingBottom="10dp"
        android:background="@drawable/boton_redondo"
        android:backgroundTint="@color/principal"
        android:drawableTop="@drawable/ic_baseline_add_photo_alternate_24"

        android:gravity="center_horizontal|center_vertical" />

    <EditText
        android:id="@+id/campo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Correo electronico"/>

    <EditText
        android:id="@+id/campo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Contraseña"/>

    <EditText
        android:id="@+id/campo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Confirmar contraseña"/>

    <Button
        android:id="@+id/botonFin"
        android:layout_width="387dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/principal"
        android:fontFamily="@font/secular_regular"
        android:text="Finalizar"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:layout_marginTop="30dp"/>

    <ProgressBar
        android:id="@+id/barra"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp" />

</LinearLayout>